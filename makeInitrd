#!/bin/bash

mkdir -p initrd
cd initrd
    mkdir -p bin etc sys proc dev lib64 /usr/lib

    cp /lib64/ld-linux-x86-64.so.2 lib64

    cp ../src/busybox bin
    cp ../src/pacman bin
    cp ../src/pacman.conf etc
    
    cd bin
        for cmd in $(./busybox --list); do
            ln -s /bin/busybox $cmd || exit
        done
    cd ..

    cp ../SBinary/bin/* bin/

    mv bin/init .

    file $(find .) | sort
    find . | cpio -o -H newc > ../initrd.img
cd ..
